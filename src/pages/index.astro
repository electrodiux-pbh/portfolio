---
import { CodeBracketIcon, CommandLineIcon, CpuChipIcon } from "@heroicons/react/24/outline";
import { LuGamepad2 } from "react-icons/lu";

import Layout from "@layouts/Layout.astro";

import Contact from "@components/Contact.astro";
import Experience from "@components/Experience.astro";
import Languages from "@components/Languages.astro";
import ProjectCard from "@components/ProjectCard.astro";
import ThreeScene from "@components/ThreeScene.jsx";

const projects = [
  {
    title: "8-bit Computer",
    desc: "A fully functional 8-bit computer built from scratch using simple logic gates on a breadboard, capable of running simple programs.",
    tech: ["Hardware", "Digital Logic", "Assembly"],
    link: "/projects/8-bit-computer",
    color: "border-red-500",
  },
  {
    title: "Industrialized",
    desc: "A civilization building game focused on automation, logistics, and resource management. Currently in development under Electrodiux.",
    tech: ["C++", "Game Design", "OpenGL", "Vulkan", "Software Architecture"],
    link: undefined,
    color: "border-cyan-500",
  },
  {
    title: "Java Game Engine",
    desc: "A custom game engine built from scratch in Java, demonstrating low-level graphics programming capabilities.",
    tech: ["Java", "OpenGL", "Jbox2D"],
    link: "https://github.com/electrodiux-pbh/java-game-engine",
    color: "border-purple-500",
  },
];

const skills = [
  { name: "Low-Level Engineering", icon: CpuChipIcon },
  { name: "System Arquitecture", icon: CommandLineIcon },
  { name: "Game Development", icon: LuGamepad2 },
  { name: "Full Stack & Web", icon: CodeBracketIcon },
];
---

<Layout title="Pablo Bermejo | Computer Scientist">
  <section class="relative h-screen w-full flex items-center justify-center overflow-hidden">
    <ThreeScene client:load />

    <div class="relative z-10 text-center px-4">
      <div
        class="inline-block px-3 py-1 mb-4 text-xs font-bold tracking-wider text-cyan-400 uppercase bg-cyan-900/30 border border-cyan-500/30 rounded-full backdrop-blur-sm"
      >
        Computer Science & Game Development
      </div>
      <h1 class="text-5xl md:text-7xl font-bold mb-6 bg-clip-text text-transparent bg-linear-to-r from-white to-slate-400">Pablo Bermejo</h1>
      <p class="text-xl md:text-2xl text-slate-400 max-w-2xl mx-auto mb-8">
        Founder of <span class="text-cyan-400 font-bold">Electrodiux</span>.
        <br class="hidden md:block" />
        Building digital worlds and robust software solutions.
      </p>

      <div class="flex justify-center gap-4">
        <a
          href="#projects"
          class="px-8 py-3 bg-cyan-600 hover:bg-cyan-500 text-white font-bold rounded-lg transition-all hover:shadow-[0_0_20px_rgba(6,182,212,0.5)]"
        >
          View Projects
        </a>
        <a href="#contact" class="px-8 py-3 bg-slate-800 hover:bg-slate-700 text-white border border-slate-700 font-medium rounded-lg transition-all">
          Contact Me
        </a>
      </div>
    </div>
  </section>

  <section class="py-20 px-4 max-w-6xl mx-auto grid md:grid-cols-2 gap-12 items-center">
    <div>
      <h2 class="text-3xl font-bold mb-6 text-white">Engineering the Future</h2>
      <p class="text-slate-400 text-lg mb-4 leading-relaxed">
        I am a 18 year's old Computer Science student at the <strong class="text-slate-200">University of Granada</strong> and the creative force behind Electrodiux.
      </p>
      <p class="text-slate-400 text-lg mb-6 leading-relaxed">
        My passion lies at the intersection of creative game design and rigorous software engineering. I began my self-taught programming journey at the age of
        12. While I specialize in low-level systems and game programming, I also have experience with front-end and back-end development.
      </p>
      <p class="text-slate-400 text-lg mb-6 leading-relaxed">
        I am currently focused on personal projects but am open to new opportunities and collaborations.
      </p>
    </div>
    <div class="grid grid-cols-2 gap-4">
      {
        skills.map((skill) => (
          <div class="p-6 bg-slate-900/50 border border-slate-800 rounded-xl hover:border-cyan-500/50 transition-colors group">
            <skill.icon className="w-8 h-8 text-cyan-400 mb-3 group-hover:scale-110 transition-transform" />
            <h3 class="font-bold text-white">{skill.name}</h3>
          </div>
        ))
      }
    </div>
  </section>

  <section id="projects" class="py-20 bg-slate-900/30">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-4xl font-bold mb-12 text-center text-white">Selected Works</h2>
      <div class="grid md:grid-cols-2 gap-8">
        {projects.map((project) => <ProjectCard {...project} />)}
      </div>
    </div>
  </section>
  <Experience />
  <Languages />
  <Contact />
</Layout>
