---
import Layout from "./Layout.astro";

interface Props {
  title: string;
  description: string;
  tech: string[];
}

const { title, description, tech } = Astro.props;
---

<Layout title={title + " | Pablo Bermejo"}>
  <article class="pt-24">
    <header class="max-w-4xl mx-auto px-4 py-12">
      <h1 class="text-5xl md:text-7xl font-bold mb-6 bg-clip-text text-transparent bg-linear-to-r from-white to-slate-400">
        {title}
      </h1>
      <p class="text-xl text-slate-400 max-w-2xl">
        {description}
      </p>
      <div class="flex flex-wrap gap-2 mt-6">
        {tech.map((t) => <span class="px-3 py-1 text-sm font-mono text-cyan-400 bg-cyan-900/50 border border-cyan-500/30 rounded-full">{t}</span>)}
      </div>
    </header>
    <div class="max-w-4xl mx-auto px-4">
      <slot />
    </div>
  </article>
</Layout>
