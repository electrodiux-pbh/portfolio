---
import contactsData from "@data/contacts.json";
import { FaGithub, FaInstagram, FaLinkedin } from "react-icons/fa";
---

<footer class="py-8 px-4 text-center">
  <div class="flex justify-center gap-6 mb-6">
    <a href={contactsData.github.link} target="_blank" class="text-slate-400 hover:text-cyan-400 transition-colors" aria-label="GitHub">
      <FaGithub size={24} />
    </a>
    <a href={contactsData.linkedin.link} target="_blank" class="text-slate-400 hover:text-cyan-400 transition-colors" aria-label="LinkedIn">
      <FaLinkedin size={24} />
    </a>
    <a href={contactsData.instagram.link} target="_blank" class="text-slate-400 hover:text-cyan-400 transition-colors" aria-label="Instagram">
      <FaInstagram size={24} />
    </a>
  </div>
  <p class="text-slate-500 text-sm">
    &copy; {new Date().getFullYear()} Pablo Bermejo. All rights reserved.
  </p>
</footer>
