---
import { ChartBarIcon, CubeIcon, EnvelopeIcon } from "@heroicons/react/24/outline";
import { MdCode } from "react-icons/md";

const is_root_page = Astro.url.pathname === "/";
---

<header class="fixed top-0 left-0 w-full z-50 bg-slate-950/50 backdrop-blur-sm">
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex justify-between items-center h-16">
      <a href={is_root_page ? "#" : "/"} class="flex items-center gap-2 text-white font-bold text-lg">
        <MdCode className="w-6 h-6 text-cyan-400" />
        <span>Pablo Bermejo</span>
      </a>
      <nav class="hidden md:flex gap-8">
        <a href="/#projects" class="flex items-center gap-2 text-slate-400 hover:text-white transition-colors">
          <CubeIcon className="w-6 h-6 text-cyan-400" />
          Projects
        </a>
        <a href="/#experience" class="flex items-center gap-2 text-slate-400 hover:text-white transition-colors">
          <ChartBarIcon className="w-6 h-6 text-cyan-400" />
          Experience
        </a>
        <a href="/#contact" class="flex items-center gap-2 text-slate-400 hover:text-white transition-colors">
          <EnvelopeIcon className="w-6 h-6 text-cyan-400" />
          Contact
        </a>
      </nav>
    </div>
  </div>
</header>
